<footer class="{% if flyingFooter is defined %}flying-footer{% else %}mt-auto{% endif %}">
    <div class="container flex flex-col md:flex-row-reverse gap-6 md:gap-3 mx-auto px-1 md:px-4">
        <div class="flex flex-col h-auto mx-auto md:mx-0 md:ms-auto md:me-3">
            <div class="footer-link w-min mb-3 mx-auto md:mx-0 after:mx-auto md:after:mx-0">
                <a href="{{ path('app_home') }}#download" class="text-lg font-bold">{{ "menu.download.title"|trans }}</a>
            </div>
            {% if app.user %}
                <div class="footer-link w-min mb-3 mx-auto md:mx-0 after:mx-auto md:after:mx-0">
                    <a href="{{ path('app_account') }}" class="text-lg font-bold">{{ "menu.account.title"|trans }}</a>
                </div>
                <div class="footer-link w-min mb-3 mx-auto md:mx-0 after:mx-auto md:after:mx-0">
                    <a href="{{ path('app_logout') }}" class="text-lg font-bold">{{ "menu.logout.title"|trans }}</a>
                </div>
            {% else %}
                <div class="footer-link w-min mb-3 mx-auto md:mx-0 after:mx-auto md:after:mx-0">
                    <a href="{{ path('app_login') }}" class="text-lg font-bold">{{ "menu.login.title"|trans }}</a>
                </div>
                <div class="footer-link w-min mb-3 mx-auto md:mx-0 after:mx-auto md:after:mx-0">
                    <a href="{{ path('app_register') }}" class="text-lg font-bold">{{ "menu.register.title"|trans }}</a>
                </div>
            {% endif %}
        </div>
        <div class="flex flex-row items-center h-auto mx-auto md:mx-0">
            <span class="md:text-lg copyright">Copyright Â© 2024 - Tom Darmigny</span>
        </div>
    </div>
</footer>