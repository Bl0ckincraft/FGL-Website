{% extends 'base.html.twig' %}

{% block title %}{{ "home.title"|trans }}{% endblock %}

{% block body %}
    {% set flyingHeader = 'true' %}
    {% include 'partials/header.html.twig' %}

    <div id="home" class="min-h-screen flex flex-col container mx-auto">
        <div class="mt-[7rem] p-5 flex-grow flex flex-col">
            <div class="flex flex-col gap-10 my-16">
                <div class="mx-auto">
                    <h1 class="step-title" content="{{ "home.step.1"|trans }}">{{ "home.step.1"|trans }}</h1>
                </div>

                <div>
                    <div class="macbook relative">
                        <div class="screen relative">
                            <div id="project-picture-container">
                                <div class="viewport absolute completely-shown" style="background-image:url('{{ asset("images/java17.webp") }}');">
                                </div>
                            </div>
                        </div>
                        <div class="base"></div>
                        <div class="notch"></div>
                        <div class="absolute left-0 top-0 right-0 bottom-0 flex flex-row justify-center">
                            <a href="https://www.oracle.com/java/technologies/downloads/#java17" target="_blank" class="download-btn my-auto rounded-2xl p-5 font-extrabold">Télécharger Java 17</a>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="mb-5 md:my-16 md:mx-auto md:w-[740px]"/>

            <div class="flex flex-col gap-10 my-8">
                <div class="mx-auto">
                    <h1 class="step-title" content="{{ "home.step.2"|trans }}">{{ "home.step.2"|trans }}</h1>
                </div>

                <div>
                    <div class="macbook relative">
                        <div class="screen relative">
                            <div id="project-picture-container">
                                <div class="viewport absolute completely-shown" style="background-image:url('{{ asset("images/launcher.webp") }}');">
                                </div>
                            </div>
                        </div>
                        <div class="base"></div>
                        <div class="notch"></div>
                        <div class="absolute left-0 top-0 right-0 bottom-0 flex flex-row justify-center">
                            <a href="{{ path('api_get_launcher') }}" target="_blank" class="download-btn my-auto rounded-2xl p-5 font-extrabold">Télécharger le launcher</a>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="mb-5 md:my-16 md:mx-auto md:w-[740px]"/>

            <div class="flex flex-col gap-10 my-8">
                <div class="mx-auto">
                    <h1 class="step-title" content="{{ "home.step.3"|trans }}">{{ "home.step.3"|trans }}</h1>
                </div>

                <div>
                    <div class="macbook relative">
                        <div class="screen relative">
                            <div id="project-picture-container">
                                <div class="viewport absolute completely-shown" style="background-image:url('{{ asset("images/play.webp") }}');">
                                </div>
                            </div>
                        </div>
                        <div class="base"></div>
                        <div class="notch"></div>
                        <div class="absolute left-0 top-0 right-0 bottom-0 flex flex-row justify-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'partials/footer.html.twig' %}
{% endblock %}
